<file path="src/middleware/errorHandler.ts">
import { Request, Response, NextFunction } from "express";

export default function errorHandler(
  err: any,
  _req: Request,
  res: Response,
  _next: NextFunction
) {
  console.error("Error:", err);

  res.status(500).json({
    success: false,
    message: err?.message || "Internal Server Error",
  });
}
</file>

